@model MyFinance.Models.Transaction.CreateViewModel
@{

}
<head>
    <link href="~/css/Home-Create.css" rel="stylesheet" />
</head>
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="panel panel-success col-sm-6">
        <div class="panel-heading">Dodaj transakcje</div>
        <div class="panel-body">
            <form asp-action="Create" asp-controller="Transaction">
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="@Model.Amount"></label>
                        <br />
                        <input asp-for="@Model.Amount" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="@Model.Type"></label>
                        <select class="form-control" asp-for="@Model.Type" asp-items="Html.GetEnumSelectList<MyFinance.Models.Enums.TransactionType>()"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="@Model.AccountId"></label>
                        <select class="form-control" asp-for="@Model.AccountId" asp-items="@(new SelectList(ViewBag.Accounts,"Id","Name"))"></select>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="@Model.CategoryId"></label>
                        <select class="form-control" asp-for="@Model.CategoryId" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))"></select>
                    </div>
                </div>    
                <div class="form-group row">
                    <div class="col-sm-8 input-div">
                        <label asp-for="@Model.Description"></label>
                        <br />
                        <input class="form-control description-input" asp-for="@Model.Description" />
                    </div>  
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Dodaj" />
                </div>
            </form>
        </div>
        
    </div>
</div>

