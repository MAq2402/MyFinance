@model MyFinance.Models.Transaction.EditViewModel
@{

}
<head>
    <link href="~/css/Home-Create.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
</head>
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="panel panel-success col-sm-6">
        <div class="panel-heading">Dodaj transakcje</div>
        <div class="panel-body">
            <form  asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Transaction">
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="@Model.Amount"></label>
                        <br />
                        <input asp-for="@Model.Amount" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="@Model.Type"></label>
                        <select class="form-control" asp-for="@Model.Type" asp-items="Html.GetEnumSelectList<MyFinance.Models.Enums.TransactionType>()"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="@Model.AccountId"></label>
                        <select class="form-control" asp-for="@Model.AccountId" asp-items="@(new SelectList(Model.Accounts,"Id","Name"))"></select>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="@Model.CategoryId"></label>
                        <select class="form-control" asp-for="@Model.CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.DateTime"></label>
                    <div class="input-group date">

                        <input asp-for="@Model.DateTime" type="text" class="form-control datepicker"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                    </div>


                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Dodaj" />
                </div>
                <div asp-validation-summary="ModelOnly">

                </div>
            </form>
        </div>

    </div>
</div>
<script src="~/js/datepicker.js"></script>



