@model MyFinance.Models.Home.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link href="~/css/Home-Index.css" rel="stylesheet" />
</head>
<div class="panel panel-success">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-1">
                <span class="Earnings">Przychody:</span>
                <br />
                <span class="Expanses">Wydatki:</span>
                <br />
                <span class="Sum">Suma:</span>
            </div>
            <div class="col-sm-1">
                <span>1000</span>
                <br />
                <span>200</span>
                <br />
                <span>800</span>
            </div>
            <div class="col-sm-10 period">
                <ul class="nav nav-pills navbar-right" role="tablist">
                    <li class=@ViewBag.Active1 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="1">Styczeń <span class="badge"></span></a></li>
                    <li class=@ViewBag.Active2 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="2">Luty</a></li>
                    <li class=@ViewBag.Active3 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="3">Marzec<span class="badge"></span></a></li>
                    <li class=@ViewBag.Active4 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="4">Kwiecień <span class="badge"></span></a></li>
                    <li class=@ViewBag.Active5 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="5">Maj</a></li>
                    <li class=@ViewBag.Active6 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="6">Czerwiec<span class="badge"></span></a></li>
                    <li class=@ViewBag.Active7 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="7">Lipiec <span class="badge"></span></a></li>
                    <li class=@ViewBag.Active8 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="8">Sierpień</a></li>
                    <li class=@ViewBag.Active9 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="9">Wrzesień<span class="badge"></span></a></li>
                    <li class=@ViewBag.Active10 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="10">Październik <span class="badge"></span></a></li>
                    <li class=@ViewBag.Active11 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="11">Listopad</a></li>
                    <li class=@ViewBag.Active12 role="presentation"><a asp-action="Index" asp-controller="Home" asp-route-monthNumber="12">Grudzień<span class="badge"></span></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <a asp-action="Create" asp-controller="Transaction">Dodaj transakcje</a>
        <table class="table">
            <tr>
                <th>Nazwa kategorii</th>
                <th>Suma (zł)</th>
                <th>Konto</th>
                <th>Rodzaj</th>
                <th>Data</th>
                <th>Szczegóły</th>
            </tr>
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td>@transaction.Category.Name</td>
                    <td>@transaction.Amount</td>
                    <td>@transaction.Account.Name</td>
                    @if (transaction.IsExpanse)
                    {
                        <td>Wydatek</td>
                    }
                    else
                    {
                        <td>Przychód</td>
                    }
                    <td>@transaction.DateTime.ToString("dd.MM.yyyy")</td>
                    <td><span class="glyphicon glyphicon-zoom-in" aria-hidden="true"> </span></td>
                </tr>
            }

        </table>
    </div>
</div>

