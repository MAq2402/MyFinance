@model MyFinance.Models.TransactionCategory.IndexViewModel
<style>
    .col-lg-12 {
        padding-left: 0px;
        padding-right: 0px;
    }
</style>
<form method="post">
    <div class="col-lg-12">
        <div class="input-group">
            <span class="input-group-btn">
                <button asp-action="Index" asp-controller="TransactionCategory" class="btn btn-success" type="submit">Dodaj kategorie</button>
            </span>
            <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Nazwa kategorii">
        </div>
    </div>
</form>
